@model HR_Recruitment.Pages.JobPostings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobPosting[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPosting[0].Overview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPosting[0].PayGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPosting[0].PrimaryTasks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPosting[0].SecondaryTasks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPosting[0].IsHrApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPosting[0].IsDirApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPosting[0].CreatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.JobPosting) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Overview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryTasks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryTasks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHrApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDirApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
